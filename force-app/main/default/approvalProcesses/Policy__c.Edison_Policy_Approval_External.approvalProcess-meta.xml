<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Edison_Motor</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>doug.ockwell@volanteglobal.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>steven.dickie@volanteglobal.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND( Actual_GWP__c &gt; 250000, Actual_GWP__c &lt; 500000, NOT(ISBLANK(Underwriter__r.Approval_Limit__c)), Actual_GWP__c &gt; Underwriter__r.Approval_Limit__c )</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Policy Level 2 Approval</label>
        <name>Policy_Level_2_Approval</name>
    </approvalStep>
    <emailTemplate>Edison_Templates/Approval_Email_to_Authoriser</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Policy__c.RecordType</field>
            <operation>equals</operation>
            <value>Edison Motor</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Email_to_Policy_Owner_After_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Mark_Policy_as_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Sub_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Email_to_Policy_Owner_After_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Sub_Status_to_Approval_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Sub_Status_to_Awaiting_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Edison Policy Approval [External] &gt; 250k</label>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Update_Status_to_Working</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
